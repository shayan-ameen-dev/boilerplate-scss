/* fonts */

@import url("https://fonts.googleapis.com/css2?family=Montserrat:wght@400&family=Roboto:wght@400&display=swap");

/* variables */

:root {
  /* primary colors */

  --primary-100: #f3e8ff;
  --primary-200: #e9d5ff;
  --primary-300: #d8b4fe;
  --primary-400: #c084fc;
  --primary-500: #a855f7;
  --primary-600: #9333ea;
  --primary-700: #7e22ce;
  --primary-800: #6b21a8;
  --primary-900: #581c87;

  /* gray colors */

  --gray-100: #f3f4f6;
  --gray-200: #e5e7eb;
  --gray-300: #d1d5db;
  --gray-400: #9ca3af;
  --gray-500: #6b7280;
  --gray-600: #4b5563;
  --gray-700: #374151;
  --gray-800: #1f2937;
  --gray-900: #111827;

  /* neutral colors */

  --black: #171717;
  --white: #f5f5f5;

  /* red colors */

  --red-light: #fca5a5;
  --red: #ef4444;
  --red-dark: #b91c1c;

  /* green colors */

  --green-light: #86efac;
  --green: #22c55e;
  --green-dark: #15803d;

  /* blue colors */

  --blue-light: #93c5fd;
  --blue: #3b82f6;
  --blue-dark: #1d4ed8;

  /* fonts */

  --heading-font: "Montserrat", sans-serif;
  --body-font: "Roboto", sans-serif;

  /* small texts */

  --small-text: 0.875rem;
  --extra-small-text: 0.7em;

  /* widths */

  --fixed-width: 560px;
  --max-width: 1120px;

  /* shadows */

  --shadow-1: 0 1px 3px 0 rgb(0 0 0 / 10%), 0 1px 2px 0 rgb(0 0 0 / 6%);
  --shadow-2: 0 4px 6px -1px rgb(0 0 0 / 10%), 0 2px 4px -1px rgb(0 0 0 / 6%);
  --shadow-3: 0 10px 15px -3px rgb(0 0 0 / 10%), 0 4px 6px -2px rgb(0 0 0 / 5%);
  --shadow-4: 0 20px 25px -5px rgb(0 0 0 / 10%),
    0 10px 10px -5px rgb(0 0 0 / 4%);

  /* other vars */

  --border-radius: 0.25rem;
  --letter-spacing: 1px;
  --transition: all 0.3s ease-in-out;
}

/* keyframes */

@keyframes spinner {
  to {
    transform: rotate(360deg);
  }
}

/* global styles */

*,
::after,
::before {
  box-sizing: border-box;
}

html {
  font-size: 100%;
}

body {
  background: var(--gray-100);
  color: var(--gray-900);
  font-family: var(--body-font);
  font-weight: 400;
  line-height: 1.75;
}

p {
  margin-bottom: 1.5rem;
  max-width: 40em;
}

h1,
h2,
h3,
h4,
h5 {
  margin: 0;
  margin-bottom: 1.38rem;
  font-family: var(--heading-font);
  font-weight: 400;
  letter-spacing: var(--letter-spacing);
  line-height: 1.3;
  text-transform: capitalize;
}

h1 {
  font-size: 3.052rem;
}

h2 {
  font-size: 2.441rem;
}

h3 {
  font-size: 1.953rem;
}

h4 {
  font-size: 1.563rem;
}

h5 {
  font-size: 1.25rem;
}

small,
.text-small {
  font-size: var(--small-text);
}

a {
  color: var(--primary-500);
  text-decoration: none;
  text-transform: capitalize;
}

ul {
  padding: 0;
  list-style-type: none;
}

img:not(.logo) {
  width: 100%;
  display: block;
  object-fit: cover;
}

/* title */

.title {
  text-align: center;
}

/* underline */

.underline {
  background: var(--primary-500);
  width: 7rem;
  height: 0.25rem;
  margin: 0 auto;
  margin-top: -1rem;
}

/* loading */

.loading {
  width: 6rem;
  height: 6rem;
  margin: 0 auto;
  border: 5px solid var(--gray-300);
  border-radius: 50%;
  border-top-color: var(--primary-500);
  animation: spinner 0.6s linear infinite;
}

/* alert */

.alert {
  margin-bottom: 1rem;
  padding: 0.375rem 0.75rem;
  border-color: transparent;
  border-radius: var(--border-radius);
}

.alert--success {
  background: var(--green-light);
  color: var(--green-dark);
}

.alert--error {
  background: var(--red-light);
  color: var(--red-dark);
}

/* button */

.btn {
  display: inline-block;
  padding: 0.375rem 0.75rem;
  border-color: transparent;
  border-radius: var(--border-radius);
  background: var(--primary-500);
  color: var(--white);
  letter-spacing: var(--letter-spacing);
  text-transform: capitalize;
  cursor: pointer;
  transition: var(--transition);
  box-shadow: var(--shadow-1);
}

.btn:hover {
  background: var(--primary-700);
  box-shadow: var(--shadow-3);
}

.btn--hipster {
  color: var(--primary-700);
  background: var(--primary-200);
}

.btn--hipster:hover {
  color: var(--primary-200);
  background: var(--primary-700);
}

.btn--block {
  display: block;
  width: 100%;
  text-align: center;
}

/* form */

.form {
  width: 90vw;
  max-width: var(--fixed-width);
  margin: 3rem auto;
  padding: 2rem 2.5rem;
  border-radius: var(--border-radius);
  background: var(--white);
  box-shadow: var(--shadow-2);
}

.form__row {
  margin-bottom: 1rem;
}

.form__label {
  display: block;
  margin-bottom: 0.5rem;
  font-size: var(--small-text);
  letter-spacing: var(--letter-spacing);
  text-transform: capitalize;
}

.form__label::after {
  content: ":";
}

.form__input,
.form__textarea {
  width: 100%;
  padding: 0.375rem 0.75rem;
  border: 1px solid var(--gray-200);
  border-radius: var(--border-radius);
  background: var(--gray-100);
}

.form__textarea {
  height: 7rem;
}

::placeholder {
  color: var(--gray-400);
  font-family: inherit;
  text-transform: capitalize;
}

.form__alert {
  color: var(--red);
  letter-spacing: var(--letter-spacing);
  text-transform: capitalize;
}
